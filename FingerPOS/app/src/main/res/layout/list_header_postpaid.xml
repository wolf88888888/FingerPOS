<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/light_blue0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="5sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="CUST. ID"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="CUST. NAMES"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvType"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="CUST TYPE"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvACType"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="A/C TYPE"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="FROM"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tvTo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="TO"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvMaxAmount"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="MAX. AMT"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvCredits"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="CREDITS"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvPayments"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="1sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="PAYMENTS"
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tvBal"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:text="BAL."
            android:singleLine="true"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
</LinearLayout>