<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">
    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:background="@color/light_blue0"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_blue1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Enter the Account Detail"
                android:textColor="@color/red"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etAccountNumber"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:hint="Account Number"
                android:background="@drawable/rect_background_white_lightblue"/>
            <EditText
                android:id="@+id/etPIN"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="PIN"
                android:singleLine="true"
                android:background="@drawable/rect_background_white_lightblue"/>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnOK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_button_deepblue_lightblue1_1"
                    android:text="OK"/>
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_button_deepblue_lightblue1_1"
                    android:text="Cancel"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>